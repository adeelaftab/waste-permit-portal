          var pos = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
          };

          $("#facility_location").val(position.coords.latitude.toFixed(5) + ", " + position.coords.longitude.toFixed(5));
          marker = new google.maps.Marker({ position: pos, map: map });
