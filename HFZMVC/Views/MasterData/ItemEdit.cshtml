@model HFZMVC.Models.EntityFramework.MasterItem
@{
  ViewBag.Title = "Create";
}

<div class="row">
  <div class="col-sm-12">
    <div class="page-title-box">

      @if (ViewBag.section == null) {
        <h4 class="page-title pull-left">Edit FDC Item master</h4>
      }

    </div>
  </div>
</div>

<div class="row">

  <div class="col-12">
    <div class="card m-b-20">
      <div class="card-body permits-managment-box">
        @using (Html.BeginForm("ItemEdit", "MasterData", FormMethod.Post, new { id = "frm", @class = "form-horizontal" })) {
          @Html.HiddenFor(e => e.ID)
          @Html.HiddenFor(e => e.EnteredOn)
          @Html.HiddenFor(e => e.EnteredBy)
          <div class=" form-group">
            <label>Data</label>
            @Html.EditorFor(e => e.ItemName)
          </div>
          <div class=" form-group">
            <label>Amount</label>
            @Html.EditorFor(e => e.Amount)
          </div>

          <div class=" form-group">
            <label>Item Code</label>
            @Html.EditorFor(e => e.ItemCode)
          </div>

          <div class=" form-group">
            <label>Status</label>
            @Html.EditorFor(e => e.status)
          </div>




          if (ViewBag.error != null) {
            <label style="color:red;">@ViewBag.error.ToString()</label>
          }
          <div class="col-md-6 form-group">
            <button type="submit" id="btnCreate"
                    class="btn btn-success btn-lg waves-effect" style="margin: 0 auto;">
              Submit
            </button>
          </div>
        }
      </div>


    </div>

  </div>

</div>

